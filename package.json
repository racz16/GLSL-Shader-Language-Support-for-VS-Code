{
    "name": "glsl-shader-language-support",
    "displayName": "GLSL Shader Language Support",
    "description": "A VS Code extension to support the GLSL shader language.",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.91.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [],
    "main": "./dist/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "glsl-shader-language-support.helloWorld",
                "title": "Hello World"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run package",
        "compile": "webpack",
        "watch": "webpack --watch",
        "package": "webpack --mode production --devtool hidden-source-map",
        "compile-tests": "tsc -p . --outDir out",
        "watch-tests": "tsc -p . -w --outDir out",
        "prettier-lint": "prettier --check .",
        "prettier-format": "prettier --write .",
        "pretest": "npm run compile-tests && npm run compile && npm run lint",
        "eslint": "eslint ./src",
        "test": "vscode-test",
        "prepare": "husky install"
    },
    "devDependencies": {
        "@eslint/js": "^9.6.0",
        "@types/eslint__js": "^8.42.3",
        "@types/mocha": "^10.0.7",
        "@types/node": "20.x",
        "@types/vscode": "^1.91.0",
        "@vscode/test-cli": "^0.0.9",
        "@vscode/test-electron": "^2.4.0",
        "eslint": "^8.57.0",
        "husky": "^9.0.11",
        "lint-staged": "^15.2.7",
        "prettier": "^3.3.2",
        "prettier-plugin-organize-imports": "^4.0.0",
        "ts-loader": "^9.5.1",
        "typescript": "^5.5.3",
        "typescript-eslint": "^7.16.0",
        "webpack": "^5.92.1",
        "webpack-cli": "^5.1.4"
    },
    "lint-staged": {
        "*.{ts,json,yml,md}": "prettier --write"
    }
}
